<h1>New Book</h1>


<form action="/books" method="post">
  <select name="author_id">
    <% Author.all.each do |a| %>
      <option value="<%= a.id %>"><%= a.name %></option>
    <% end %>
  </select>
  <label for="title">
    Title
  </label>
  <input type="text" name="title" value="" placeholder='title'>
  <label for="snippet">
    Snippet
  </label>
  <input type="text" name="snippet" value="" placeholder='snippet'>

  <input type="submit">
</form>
